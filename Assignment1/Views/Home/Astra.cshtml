@{
    Layout = null; // disable the layout for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- meta tags and title -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Astra - Your Idea Matters</title>

    <!-- css links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <!-- custom styles -->
    <style>
        /* hero section background */
        .hero-section {
            background-color: #00dbde;
            background-image: linear-gradient(90deg, #2d01b8 0%, #9709fe 100%);
            color: white;
        }

        /* navbar link hover effect */
        .navbar-nav .nav-link:hover {
            color: #ffc107 !important;
        }
    </style>
</head>
<body>
    <!-- navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-transparent position-fixed w-100" style="z-index: 1">
        <div class="container">
            <!-- logo -->
            <img src="~/Images/astra-logo.svg" alt="astra-logo" />

            <!-- hamburger menu for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon text-white"></span>
            </button>

            <!-- navbar links and social icons -->
            <div class="collapse navbar-collapse sm-bg-dark" id="navbarNav">
                <!-- nav links -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Contact</a>
                    </li>
                </ul>
                <!-- social icons -->
                <div class="d-flex ms-3">
                    <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white me-3"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
        </div>
    </nav>

    <!-- hero section -->
    <section class="hero-section py-5 text-left">
        <div class="container py-5">
            <div class="row align-items-center">
                <!-- hero text content -->
                <div class="col-md-6">
                    <h1 class="display-2 fw-bold">Your Idea Matters</h1>
                    <p>Pulvinar enim ac tortor nulla facilisi tristique facilisi elementum sollicitudin eget lorem.</p>
                    <button class="btn btn-warning rounded-pill w-auto px-4 py-3 fs-5">Make a Website</button>
                </div>
                <!-- hero image -->
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <img src="~/Images/1.png" alt="Banner Image" class="img-fluid w-75" />
                </div>
            </div>
        </div>
    </section>

    <main>
        <!-- services section -->
        <section class="services-section py-4">
            <div class="container py-5">
                <div class="row">
                    <!-- local business service card -->
                    <div class="col-md-3">
                        <div class="card border-0 px-3 text-start">
                            <div class="card-body">
                                <i class="fas fa-home fa-2x text-primary mb-3"></i>
                                <h3 class="text-black">Local Business</h3>
                                <p class="text-muted">Lorem ipsum dolor consectetur adipiscing elit eiusmod.</p>
                            </div>
                        </div>
                    </div>
                    <!-- online store service card -->
                    <div class="col-md-3">
                        <div class="card border-0 px-3 text-start">
                            <div class="card-body">
                                <i class="fas fa-shopping-cart fa-2x text-primary mb-3"></i>
                                <h3 class="text-black">Online Store</h3>
                                <p class="text-muted">Lorem ipsum dolor consectetur adipiscing elit eiusmod.</p>
                            </div>
                        </div>
                    </div>
                    <!-- blogging service card -->
                    <div class="col-md-3">
                        <div class="card border-0 px-3 text-start">
                            <div class="card-body">
                                <i class="fas fa-pen fa-2x text-primary mb-3"></i>
                                <h3 class="text-black">Blogging</h3>
                                <p class="text-muted">Lorem ipsum dolor consectetur adipiscing elit eiusmod.</p>
                            </div>
                        </div>
                    </div>
                    <!-- portfolio service card -->
                    <div class="col-md-3">
                        <div class="card border-0 px-3 text-start">
                            <div class="card-body">
                                <i class="fas fa-check-circle fa-2x text-primary mb-3"></i>
                                <h3 class="text-black">Portfolio</h3>
                                <p class="text-muted">Lorem ipsum dolor consectetur adipiscing elit eiusmod.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Astra - Project by Basil Moyikkal - C0908488</p>
        </div>
    </footer>

    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>